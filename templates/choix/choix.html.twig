        border-radius: 5px;
    }

    .overlay-text{
        font-size: 20px;
    }


}

@media screen and (max-width: 433px) {
    
    .block-text h1{
        font-size: 35px;
    }


    .buttons-responsive .connexion {
        background-image: linear-gradient(to right, #007bff, #0056b3); /* Dégradé bleu pour le bouton Connexion */
    }
    
    .buttons-responsive .create {
        background-image: linear-gradient(to right, #28a745, #218838); /* Dégradé vert pour le bouton Créer un compte */
    }
    
    .buttons-responsive .config {
        background-image: linear-gradient(to right, #e83c69, #f56dcc); /* Dégradé rose foncé pour le bouton Config */
    }
    

}


</style>
