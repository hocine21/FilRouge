<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste d'envies</title>
    <link rel="stylesheet" href="{{ asset('css/menu.css') }}">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }
        h5 {
            font-size: 1.5em;
            border-bottom: 2px solid #ff6600; /* Orange color */
            padding-bottom: 10px;
            margin-bottom: 20px;
            color: #333;
        }
        .card {
            display: flex;
            border: 1px solid #ddd;
            border-radius: 8px;
            margin-bottom: 20px;
            padding: 15px;
            background: linear-gradient(145deg, #f8f8f8, #e0e0e0);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .card-img-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            border-radius: 8px;
            background: #ddd;
            border: 2px solid #ccc;
        }
        .card-img-top {
            max-width: 100%;
            border-radius: 8px;
            transition: transform 0.3s;
        }
        .card-img-top:hover {
            transform: scale(1.05);
        }
        .card-body {
            flex: 2;
            padding: 15px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .card-title {
            font-size: 1.25em;
            margin-bottom: 10px;
            color: #ff6600; /* Orange color */
        }
        .card-text {
            font-size: 1em;
            color: #333;
            margin-bottom: 20px;
        }
        .card button {
            align-self: flex-start;
            margin-bottom: 10px;
        }
        .btn {
            padding: 10px 20px;
            font-size: 1em;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 10px;
            transition: background-color 0.3s, transform 0.3s;
            color: white;
        }
        .btn-primary {
            background: linear-gradient(45deg, #ff6600, #ff8533); /* Orange gradient */
        }
        .btn-primary:hover {
            background: linear-gradient(45deg, #ff8533, #ff6600);
            transform: scale(1.05);
        }
        .btn-secondary {
            background: linear-gradient(45deg, #6c757d, #5a6268); /* Grey gradient */
        }
        .btn-secondary:hover {
            background: linear-gradient(45deg, #5a6268, #6c757d);
            transform: scale(1.05);
        }
        .btn-success {
            background: linear-gradient(45deg, #28a745, #218838); /* Green gradient */
        }
        .btn-success:hover {
            background: linear-gradient(45deg, #218838, #28a745);
            transform: scale(1.05);
        }
        .quote-status {
            font-size: 1em;
            font-weight: bold;
            color: #ff6600; /* Orange color */
        }
        .card-body::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 50px;
            height: 50px;
            background: url('fer.jpg') no-repeat center center;
            background-size: contain;
            opacity: 0.1;
        }
    </style>
</head>
<body>
    {% include 'menu.html.twig' %}
    <div class="container">
        <!-- Liste d'envies -->
        <div id="wishlist">
            <h5>Liste d'envies</h5>
            <div id="wishlist-container"></div>
        </div>
    </div>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        function displayWishlist() {
            const wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];
            const wishlistContainer = document.getElementById('wishlist-container');
            wishlistContainer.innerHTML = '';
            wishlist.forEach(item => {
                const card = document.createElement('div');
                card.classList.add('card');
                card.innerHTML = `
                    <div class="card-img-container">
                        <img src="/pictures/${item.image}" class="card-img-top" alt="${item.nomProduit}">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">${item.nomProduit}</h5>
                        <p class="card-text">
                            Longueur: ${(item.longueur / 100).toFixed(2)} m<br>
                            Quantité: ${item.quantite}<br>
                            Prix Unitaire: ${item.variante.prixML.toFixed(2).replace('.', ',')} €/m<br>
                            Prix Total: ${(item.longueur / 100 * item.quantite * item.variante.prixML).toFixed(2).replace('.', ',')} €
                        </p>
                        <button type="button" class="btn btn-primary request-discount" data-id="${item.variante.id}">Demander une remise</button>
                        <button type="button" class="btn btn-secondary remove-from-wishlist" data-id="${item.variante.id}">Supprimer</button>
                        <button type="button" class="btn btn-success transfer-to-cart" data-id="${item.variante.id}">Transférer au panier</button>
                        <p class="quote-status" id="quote-status-${item.variante.id}">Devis: En attente</p>
                    </div>
                `;
                wishlistContainer.appendChild(card);
            });

            document.querySelectorAll('.remove-from-wishlist').forEach(button => {
                button.addEventListener('click', function() {
                    const variantId = this.getAttribute('data-id');
                    removeFromWishlist(variantId);
                });
            });

            document.querySelectorAll('.request-discount').forEach(button => {
                button.addEventListener('click', function() {
                    const variantId = this.getAttribute('data-id');
                    requestDiscount(variantId);
                });
            });

            document.querySelectorAll('.transfer-to-cart').forEach(button => {
                button.addEventListener('click', function() {
                    const variantId = this.getAttribute('data-id');
                    transferToCart(variantId);
                });
            });
        }

        function removeFromWishlist(id) {
            let wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];
            wishlist = wishlist.filter(item => item.variante.id !== id);
            localStorage.setItem('wishlist', JSON.stringify(wishlist));
            displayWishlist();
        }

        function requestDiscount(id) {
            // Simulate a discount request
            setTimeout(() => {
                document.getElementById(`quote-status-${id}`).textContent = 'Devis: Accepté';
            }, 2000); // Simulate a delay for the discount request
        }

        function transferToCart(id) {
            let wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];
            let cart = JSON.parse(localStorage.getItem('cart')) || [];
            const item = wishlist.find(item => item.variante.id === id);
            if (item) {
                cart.push(item);
                localStorage.setItem('cart', JSON.stringify(cart));
                removeFromWishlist(id);
                alert('Article transféré au panier');
            }
        }

        displayWishlist();
    });
    </script>
</body>
</html>
