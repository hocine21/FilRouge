<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste d'envies</title>
    <link rel="stylesheet" href="{{ asset('css/menu.css') }}">
    <style>
        /* Style général */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            transition: background-color 0.3s;
        }

        /* En-tête */
        header {
            background-color: #333;
            color: #fff;
            padding: 20px 30px;
            text-align: center;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
            border-bottom: 4px solid #444;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            font-size: 20px;
            font-weight: 600;
            letter-spacing: 1px;
        }

        /* Conteneur principal */
        .container {
            margin-top: 120px; /* Compense la hauteur de l'en-tête fixe */
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Section de la liste d'envies */
        #wishlist {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
            padding: 30px;
            max-width: 1200px;
            width: 100%;
            position: relative;
            margin-bottom: 100px; /* Ajuste l'espace pour le bouton */
            border: 1px solid #ddd;
        }

        /* Titre de la liste d'envies */
        #wishlist h5 {
            margin-top: 0;
            font-size: 28px;
            color: #222;
            border-bottom: 3px solid #007bff;
            padding-bottom: 15px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            position: relative;
            transition: color 0.3s;
        }

        #wishlist h5::after {
            content: '';
            display: block;
            width: 80px;
            height: 3px;
            background-color: #007bff;
            margin: 10px auto;
            transition: width 0.3s, background-color 0.3s;
        }

        #wishlist h5:hover::after {
            width: 100px;
            background-color: #0056b3;
        }

        /* Bouton de demande de réduction */
        #global-discount {
            display: block;
            width: 180px; /* Largeur fixe du bouton */
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 12px;
            padding: 12px;
            text-align: center;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            position: absolute;
            bottom: -40px; /* Ajuste la position du bouton en dessous du tableau */
            left: 50%;
            transform: translateX(-50%);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); /* Ajoute une ombre au bouton */
        }

        #global-discount:hover {
            background-color: #0056b3;
            transform: translateX(-50%) scale(1.05);
        }

        /* Tableau pour les articles de la liste d'envies */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .quote-status {
            font-weight: 600;
            padding: 5px 10px;
            border-radius: 8px;
            text-align: center;
        }

        .quote-status.pending {
            background-color: #ffc107;
            color: #fff;
        }

        .quote-status.accepted {
            background-color: #28a745;
            color: #fff;
        }

        .quote-status.rejected {
            background-color: #dc3545;
            color: #fff;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            #wishlist {
                padding: 20px;
                margin-bottom: 60px; /* Ajuste l'espace pour le bouton sur petits écrans */
            }

            th, td {
                padding: 8px 10px;
                font-size: 14px;
            }

            #global-discount {
                width: 160px;
                padding: 10px;
                font-size: 14px;
                bottom: -30px; /* Ajuste la position du bouton */
            }
        }

        @media (max-width: 480px) {
            #wishlist {
                padding: 15px;
                margin-bottom: 50px; /* Ajuste l'espace pour le bouton sur très petits écrans */
            }

            table {
                font-size: 12px;
            }

            th, td {
                padding: 6px 8px;
            }

            #global-discount {
                width: 140px;
                padding: 8px;
                font-size: 12px;
                bottom: -20px; /* Ajuste la position du bouton */
            }
        }
    </style>
</head>

<body>
    <header>
        Liste d'envies
    </header>

    <div class="container">
        <!-- Liste d'envies -->
        <div id="wishlist">
            <h5>Liste d'envies</h5>
            <table>
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Produit</th>
                        <th>Longueur</th>
                        <th>Quantité</th>
                        <th>Prix Unitaire</th>
                        <th>Prix Total</th>
                        <th>Statut Devis</th>
                    </tr>
                </thead>
                <tbody id="wishlist-container">
                    <!-- Contenu dynamique -->
                </tbody>
            </table>
            <button id="global-discount">Demander réduction</button>
        </div>
    </div>

    <script>
       document.addEventListener('DOMContentLoaded', function () {
    function displayWishlist() {
        let wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];

        // Grouper les produits similaires par ID et longueur
        let groupedWishlist = [];
        wishlist.forEach(item => {
            let existingItem = groupedWishlist.find(i => i.variante.id === item.variante.id && i.longueur === item.longueur);
            if (existingItem) {
                existingItem.quantite += item.quantite;
                existingItem.prixTTC = existingItem.quantite * existingItem.variante.prixML * (existingItem.longueur / 100);
            } else {
                groupedWishlist.push({ ...item });
            }
        });

        const wishlistContainer = document.getElementById('wishlist-container');
        wishlistContainer.innerHTML = '';
        groupedWishlist.forEach(item => {
            const row = document.createElement('tr');
            row.innerHTML = `
                <td><img src="/pictures/${item.image}" alt="${item.nomProduit}" width="100"></td>
                <td>${item.nomProduit}</td>
                <td>${(item.longueur / 100).toFixed(2)} m</td>
                <td>${item.quantite}</td>
                <td>${item.variante.prixML.toFixed(2).replace('.', ',')} €/m</td>
                <td>${item.prixTTC ? item.prixTTC.toFixed(2).replace('.', ',') + ' €' : 'Calcul en cours...'}</td>
                <td class="quote-status pending" id="quote-status-${item.variante.id}">Devis: En attente</td>
            `;
            wishlistContainer.appendChild(row);
        });
    }

    async function requestDiscount() {
        let wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];

        // Formater les données à envoyer à l'API
        let commandeData = wishlist.map(item => ({
            produitId: item.variante.id,
            longueur: item.longueur,
            quantite: item.quantite
        }));

        try {
            // Envoyer la requête POST à l'API
            let response = await fetch('/api/commande', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify({ commande: commandeData })
            });

            if (response.ok) {
                let jsonResponse = await response.json();
                alert('Demande de réduction envoyée avec succès !');
                // Traitez la réponse de l'API si nécessaire
                console.log(jsonResponse);
            } else {
                alert('Une erreur est survenue lors de l\'envoi de la demande.');
                console.error('Erreur de la réponse:', response.statusText);
            }
        } catch (error) {
            alert('Erreur de réseau : Impossible d\'envoyer la demande.');
            console.error('Erreur de la requête:', error);
        }
    }

    document.getElementById('global-discount').addEventListener('click', function () {
        requestDiscount();
    });

    displayWishlist();
});

    </script>
</body>

</html>
